<Window x:Class="InteractivePoster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractivePoster"
        mc:Ignorable="d"
        Title="Основы аналитической геометрии. Кривые второго порядка"
        MinHeight="610"
      MinWidth="780" WindowStartupLocation="CenterScreen"
        WindowState="Maximized"  FontSize="18" WindowStyle="ToolWindow" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Frame Grid.Row="0"
               Grid.Column="0"
               x:Name="ToolPainFrame"
               Panel.ZIndex="2"
               NavigationUIVisibility="Hidden"></Frame>
        <Frame Name="frmMain" Grid.ColumnSpan="2" Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Panel.ZIndex="0"
               ></Frame>
        <Frame Name="NavigateFrame" Grid.Column="1" Grid.Row="0" 
               NavigationUIVisibility="Hidden"
               Panel.ZIndex="0"
               ></Frame>

    </Grid>
</Window>
