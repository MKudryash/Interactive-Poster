<Page x:Class="InteractivePoster.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InteractivePoster.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal">
            <StackPanel Width="236">
                <TextBlock Text="Окружность"  HorizontalAlignment="Center"/>
                <RadioButton Content="Images/Circle.jpg"
                             Tag="CircleTag"
                            Height="150"
                            Width="150"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="ThemeMath">
                </RadioButton>
                <TextBlock Text="Эллипс"  HorizontalAlignment="Center"/>
                <RadioButton Content="Images/Circle.jpg"
                             Tag="ElipsTag"
                            Height="150"
                            Width="150"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="ThemeMath">
                </RadioButton>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Гипербола"  HorizontalAlignment="Center"/>
                <RadioButton Content="Images/Circle.jpg"
                             Tag="HiperboleTag"
                            Height="150"
                            Width="150"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="ThemeMath">

                </RadioButton>
                <TextBlock Text="Парабола"  HorizontalAlignment="Center"/>
                <RadioButton Content="Images/Circle.jpg"
                             Tag="ParabolaTag"
                            Height="150"
                            Width="150"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="ThemeMath">

                </RadioButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
